  <% if @aluno.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Ocorreu <%= pluralize(@aluno.errors.count, "erro(s)") %> ao tentar salvar os dados deste aluno:</h3>
      
      </div>
          <div class="panel-body">
            <ul>
               <% @aluno.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
               <% end %>
            </ul>
          </div>
      </div>
  <% end %>

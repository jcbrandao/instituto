<%- model_class = Pdialuno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= 'Código PDI' %></th>
      <th><%= 'Nome Aluno'%></th>
      <th><%= 'Código Aluno' %></th>
      <th><%= 'Criado em:' %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pdialunos.each do |pdialuno| %>
      <tr>
        <td><%= link_to pdialuno.id, pdialuno_path(pdialuno) %></td>
        <td><%= pdialuno.aluno.nome%></td>
        <td><%= pdialuno.aluno.id%></td>
        <td><%=l pdialuno.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pdialuno_path(pdialuno), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pdialuno_path(pdialuno),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pdialuno_path,
            :class => 'btn btn-primary' %>
<br><br>